<body class="bg-light">
<div class="container">
<div class="py-5 text-center">
 <img class="d-block mx-auto mb-4" src="https://image.flaticon.com/icons/svg/1643/1643625.svg" alt=""
        width="72" height="72">
<h2><%= @service.name %></h2>
</div>

<div class="card" style="width: 30rem;margin:0 auto;">
  <img class="card-img-top" src="<%= @service.image %>" alt="Card image cap">
  <div class="card-body">
    <p class="card-text">
    <strong>Service Description:</strong> 
    <%= @service.description %></p>
    <p class="card-text">
   <strong>Service Price:</strong> 
   <%= @service.price %></p>
   <p class="card-text">
      <strong>Service Duration:</strong>
   <%= @service.duration %></p>
      <%= link_to 'Make an Appointment', new_appointment_path, class:"btn btn-outline-warning" %>

  </div>

</div>


<footer class="my-5 pt-5 text-muted text-center text-small">
       <p class="mb-1">&copy; 2018-2019 MPM</p>
        <ul class="list-inline">
          <li class="list-inline-item"><a href="#">Privacy</a></li>
          <li class="list-inline-item"><a href="#">Terms</a></li>
          <li class="list-inline-item"><a href="#">Support</a></li>
        </ul>
      </footer>
    </div>
</body>